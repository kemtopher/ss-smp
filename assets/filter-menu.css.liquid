  border-radius: {{ settings.pt_small_box_radius | default: 0 }}px;
}
.pt-display-smallbox ul li .collection-name {
  font-size: {{ settings.pt_links_size | default: '13' }}px;
}
.pt-display-smallbox ul li.selected {
  background-color: {{ settings.color_pt_small_box_bg_hover | default: '#888' }};
}
.pt-display-smallbox ul li.selected a {
  color: {{ settings.color_pt_small_box_text_hover | default: '#FFF' }};
}
.pt-display-smallbox ul li:hover {
  background-color: {{ settings.color_pt_small_box_bg_hover | default: '#555' }};
}
.pt-display-smallbox ul li:hover a {
  color: {{ settings.color_pt_small_box_text_hover | default: '#EEE' }};
}

/* Sticky mode */
@media screen and (min-width: {{ settings.pt_sticky_min_width | default: '767px' }}) {
  {{ settings.pt_sticky_selector | default: '.pt-filter-menu-section' }}.pt-sticky {
    position: sticky !important;
    position: -webkit-sticky !important;
    top: {{ settings.pt_sticky_offset | default: '25px' }};
    max-height: calc(90vh - {{ settings.pt_sticky_offset | default: '25px' }});
    overflow-y: auto;
    overflow-x: hidden;
  }
}

/* Make sure all elements display correctly */
.filter-menu *:empty {
  display: initial;
}

